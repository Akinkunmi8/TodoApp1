@model TodoTask

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class=" row">
    <div col-md- 6>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class=" form-group">
                <label asp-for="Content" class="form-label mt-4"></label>
                <input asp-for="Content" id="exampleTodoList" aria-describedby="Todo list help" placeholder="Enter Task">
            </div>
            <div class=" form-group">
                <label asp-for="Date" class="form-label mt-4"></label>
                <input asp-for="Date" id="exampleTodoList" aria-describedby="Todo list help" placeholder="Enter Task">
            </div>
            <div class=" form-group">
                <input type="submit" value="Edit" class=" btn btn-primary" />
                <a asp-action="Index"></a>
            </div>
        </form>
    </div>

</div>