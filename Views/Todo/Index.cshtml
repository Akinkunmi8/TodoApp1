
@model List<TodoTask>

@{
    ViewData["Title"] = "Home Page";
}

<br />
<div class="d-grid gap-2">
    <form class="d-flex">
        <input class="form-control me-sm-2" type="text" placeholder="Search">
        <a asp-controller="Todo" asp-action="Search" asp-route-id="id" class="btn btn-secondary my-2 my-sm-0" type="submit">Search</a>
    </form>
    <a asp asp-controller="Todo" asp-action="DeleteAll" as class="btn btn-lg btn-primary" type="button">Delete All </a>
    <a asp-controller="Todo" asp-action="Create" class="btn btn-lg btn-primary" type="button">Create To Do Task</a>
</div>

<br />
<table class="table table-active">
    <thead>
        <tr>
            <th scope="col">S/N</th>
            <th scope="col">Task</th>
            <th scope="col">Due date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            var count = 0;
        }
        @foreach (var members in Model)
        {
            <tr>
                <td>@(count+=1)</td>
                <td>@members.Content</td>
                <td>@members.Date</td>
                <td>
                    <a asp-controller="Todo" asp-action="Edit" asp-route-id="@members.id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a asp-controller="Todo" asp-action="Delete" asp-route-id="@members.id" class="btn btn-warning"><i class="bi bi-trash3"></i>Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
